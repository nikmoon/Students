<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnStudents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="onClickStudents"
        android:text="@string/students"
        android:textSize="16sp"
        app:layout_constraintHorizontal_weight="7"
        app:layout_constraintLeft_toRightOf="@+id/spaceLeft"
        app:layout_constraintRight_toLeftOf="@+id/spaceRight"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGroups"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickGroups"
        android:text="@string/groups"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/btnStudents"
        app:layout_constraintRight_toRightOf="@+id/btnStudents"
        app:layout_constraintTop_toBottomOf="@+id/btnStudents" />

    <Button
        android:id="@+id/btnLessons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickLessons"
        android:text="@string/lessons"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/btnStudents"
        app:layout_constraintRight_toRightOf="@+id/btnStudents"
        app:layout_constraintTop_toBottomOf="@+id/btnGroups" />

    <Space
        android:id="@+id/spaceLeft"
        app:layout_constraintHorizontal_weight="3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toTopOf="@+id/btnStudents"
        app:layout_constraintBottom_toBottomOf="@+id/btnStudents"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnStudents" />

    <Space
        android:id="@+id/spaceRight"
        app:layout_constraintHorizontal_weight="3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toTopOf="@+id/btnStudents"
        app:layout_constraintBottom_toBottomOf="@+id/btnStudents"
        app:layout_constraintLeft_toRightOf="@+id/btnStudents"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>