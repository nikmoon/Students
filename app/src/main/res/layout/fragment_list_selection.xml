<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragLists"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MyColor"
    tools:context="com.example.nikbird.students.fragment.ListSelection">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btnStudents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:text="Студенты"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGroups"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:text="Группы"
        app:layout_constraintLeft_toLeftOf="@+id/btnStudents"
        app:layout_constraintRight_toRightOf="@+id/btnStudents"
        app:layout_constraintTop_toBottomOf="@+id/btnStudents" />

    <Button
        android:id="@+id/btnLessons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:text="Лекции"
        app:layout_constraintLeft_toLeftOf="@+id/btnGroups"
        app:layout_constraintRight_toRightOf="@+id/btnGroups"
        app:layout_constraintTop_toBottomOf="@+id/btnGroups" />
</android.support.constraint.ConstraintLayout>
